<?xml version="1.0" encoding="GB2312"?>
<Body>
    <Title>比亚迪重大食物中毒事件</Title>
    <ReportTime type="absTime">2009年2月23日</ReportTime>
    <Content>
        <Paragraph>
            <Sentence>
                <Event eid="e1">
                    <Location lid="l1">深圳比亚迪公司</Location>
                    <Time tid="t1" type="relTime">2月23日</Time>所发生的
                    <Participant sid="s1">63名员工</Participant>疑似
                    <Denoter did="d1" type="emergency">食物中毒</Denoter>
                </Event>，
                <Event eid="e2">
                    <Time type="relTime" tid="t2">目前</Time>已造成
                    <Participant sid="s2">2人</Participant>
                    <Denoter did="d2" type="stateChange">死亡</Denoter>
                </Event>。
            </Sentence>
            <Sentence>
                <Event eid="e3">
                    <Time tid="t3" type="timeInterval">截至24日</Time>，
                    <Participant sid="s3">19人</Participant>仍
                    <Denoter did="d3" type="operation">留院治疗</Denoter>
                </Event>，
                <Event eid="e4">另外
                    <Participant sid="s4">42人</Participant>已
                    <Denoter did="d4" type="operation">出院</Denoter>
                </Event>。
            </Sentence>
            <Sentence>
                <Event eid="e5">
                    <Participant oid="o5" sid="s6,s7">所有患者</Participant>经
                    <Participant sid="s5">医护人员</Participant>的全力
                    <Denoter did="d5" type="operation">救治</Denoter>
                </Event>,
                <Event eid="e6">
                    <Time type="relTime" tid="t6">目前</Time>
                    <Object sid="s6">病情</Object>
                    <Denoter type="stateChange" did="d6">稳定</Denoter>
                </Event>,
                <Event polarity="negative" eid="e7">均无
                    <Denoter did="d7" type="stateChange">生命危险</Denoter>
                </Event>。
            </Sentence>
        </Paragraph>
    </Content>
    <eRelation relType="Causal" cause_eid="e1" effect_eid="e2"/>
    <eRelation relType="Accompany" accompanya_eid="e3" accompanyb_eid="e4"/>
    <eRelation relType="Follow" bevent_eid="e5" aevent_eid="e6"/>
    <eRelation relType="Accompany" accompanya_eid="e6" accompanyb_eid="e7"/>
    
